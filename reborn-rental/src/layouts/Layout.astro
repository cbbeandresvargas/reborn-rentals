<script>
	// Sidebar functionality
	document.addEventListener('DOMContentLoaded', function() {
		const menuBtn = document.getElementById('menu-btn');
		const cartBtn = document.getElementById('cart-btn');
		const menuSidebar = document.getElementById('menu-sidebar');
		const cartSidebar = document.getElementById('cart-sidebar');
		const overlay = document.getElementById('sidebar-overlay');
		const closeMenuBtn = document.getElementById('close-menu');
		const closeCartBtn = document.getElementById('close-cart');

		// Check if all elements exist before adding event listeners
		if (!menuBtn || !cartBtn || !menuSidebar || !cartSidebar || !overlay || !closeMenuBtn || !closeCartBtn) {
			console.error('Some sidebar elements are missing');
			return;
		}

		// Open menu sidebar
		menuBtn.addEventListener('click', function() {
			menuSidebar.classList.remove('-translate-x-full');
			menuSidebar.classList.add('translate-x-0');
			overlay.classList.remove('opacity-0', 'invisible');
			overlay.classList.add('opacity-100', 'visible');
			document.body.style.overflow = 'hidden';
		});

		// Open cart sidebar (without overlay)
		cartBtn.addEventListener('click', function() {
			cartSidebar.classList.remove('translate-x-full');
			cartSidebar.classList.add('translate-x-0');
			
			// Ajustar el contenido principal para que sea responsivo
			const mainContent = document.getElementById('main-content');
			if (mainContent) {
				mainContent.classList.add('cart-open');
				// En pantallas grandes, reducir el ancho del contenido
				if (window.innerWidth >= 1024) {
					mainContent.style.marginRight = '384px'; // lg:w-96 = 384px
				} else if (window.innerWidth >= 640) {
					mainContent.style.marginRight = '320px'; // sm:w-80 = 320px
				}
				// En móviles, el sidebar ocupa toda la pantalla, no necesitamos ajustar
			}
		});

		// Close menu sidebar
		closeMenuBtn.addEventListener('click', function() {
			menuSidebar.classList.remove('translate-x-0');
			menuSidebar.classList.add('-translate-x-full');
			overlay.classList.remove('opacity-100', 'visible');
			overlay.classList.add('opacity-0', 'invisible');
			document.body.style.overflow = '';
		});

		// Close cart sidebar (without overlay)
		closeCartBtn.addEventListener('click', function() {
			cartSidebar.classList.remove('translate-x-0');
			cartSidebar.classList.add('translate-x-full');
			
			// Restaurar el contenido principal a la normalidad
			const mainContent = document.getElementById('main-content');
			if (mainContent) {
				mainContent.classList.remove('cart-open');
				mainContent.style.marginRight = '';
			}
		});

		// Close menu sidebar when clicking overlay
		overlay.addEventListener('click', function() {
			menuSidebar.classList.remove('translate-x-0');
			menuSidebar.classList.add('-translate-x-full');
			overlay.classList.remove('opacity-100', 'visible');
			overlay.classList.add('opacity-0', 'invisible');
			document.body.style.overflow = '';
		});

		// Close menu sidebar with Escape key
		document.addEventListener('keydown', function(e) {
			if (e.key === 'Escape') {
				menuSidebar.classList.remove('translate-x-0');
				menuSidebar.classList.add('-translate-x-full');
				overlay.classList.remove('opacity-100', 'visible');
				overlay.classList.add('opacity-0', 'invisible');
				document.body.style.overflow = '';
			}
		});

		// Función para ajustar el contenido cuando se redimensiona la ventana
		function adjustMainContent() {
			const mainContent = document.getElementById('main-content');
			const cartSidebar = document.getElementById('cart-sidebar');
			
			if (mainContent && cartSidebar) {
				// Solo ajustar si el carrito está abierto
				if (cartSidebar.classList.contains('translate-x-0')) {
					mainContent.classList.add('cart-open');
					if (window.innerWidth >= 1024) {
						mainContent.style.marginRight = '384px'; // lg:w-96 = 384px
					} else if (window.innerWidth >= 640) {
						mainContent.style.marginRight = '320px'; // sm:w-80 = 320px
					} else {
						mainContent.style.marginRight = ''; // En móviles no ajustar
					}
				} else {
					// Si el carrito está cerrado, restaurar la normalidad
					mainContent.classList.remove('cart-open');
					mainContent.style.marginRight = '';
				}
			}
		}

		// Listener para redimensionamiento de ventana
		window.addEventListener('resize', adjustMainContent);
		
		// Observer para detectar cambios en el sidebar del carrito
		const cartObserver = new MutationObserver(function(mutations) {
			mutations.forEach(function(mutation) {
				if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
					adjustMainContent();
				}
			});
		});
		
		// Observar cambios en las clases del sidebar del carrito
		cartObserver.observe(cartSidebar, { attributes: true, attributeFilter: ['class'] });
	});
</script>

