---
import Layout from "../layouts/Layout.astro";
---
<Layout>
    <main class="content">
      <h1>Fees and Charges</h1>
      <p class="updated">[Updated April 23, 2025]</p>

      <section class="section">
        <h3>Equipment Transportation Charges:</h3>
        <ul class="bulleted">
          <li>“Delivery” Fee (Standard Rate.)</li>
          <li>“Pick–Up” Fee (Standard Rate.)</li>
          <li>“Rough Terrain” Charge</li>
          <li>“Delivery” Fee (Long Haul Rate.)</li>
          <li>“Pick–Up” Fee (Long Haul Rate.)</li>
        </ul>
      </section>

      <section class="section">
        <h3>General Charges:</h3>
        <ul class="bulleted">
          <li>“Dry Run” Fee</li>
          <li>“Waiting” Fee</li>
          <li>“On Hold” Fee</li>
          <li>“Delivery” Fee (Standard Rate.)</li>
          <li>“Pick–Up” Fee (Standard Rate.)</li>
        </ul>
      </section>

      <section class="section">
        <h3>Cancellation Fees & Policy</h3>
      </section>
    </main>

  <style is:global>

    :root{
      --teal: #0fa8a0;
      --header-bg: #3e3e3f;
      --page-bg: #f1f1f1;
      --content-bg: #f3f3f3;
      --text: #222;
      --muted: #666;
    }

    .content{
    max-width:100%;
    padding: 50px 80px;
    background: var(--content-bg);
    box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    border-radius: 2px;
    }
    h1{
      margin: 0 0 6px 0;
      font-size:34px;
      font-weight:800;
    }

    .updated{
      margin: 0 0 20px 0;
      color: var(--muted);
      font-size:13px;
    }

    .section{
      margin-bottom: 20px;
    }

    .section h3{
      margin: 8px 0 10px 0;
      font-size:15px;
      font-weight:700;
    }

    /* Responsive */
    @media (max-width:720px){
    .content{
        margin: 18px 0 18px 20px; 
        padding: 18px;
    }
    h1{ font-size:24px; }
    }
  </style>
</Layout>
